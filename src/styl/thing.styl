// Interactive-specific css here

.item-body
	margin 0 auto
	max-width 940px

#interactive-content
	width 100%
	margin-left auto
	margin-right auto
	

/* Apply a natural box layout model to all elements http//paulirish.com/2012/box-sizing-border-box-ftw/ */
* 
	box-sizing border-box
	
.chromeframe 
	position absolute top 0

/* Ok, this is where the fun starts.
-------------------------------------------------------------------------------*/

p 
	line-height 170%
	margin-bottom 20px

/* Using local fonts? Check out Font Squirrel's webfont generator http//www.fontsquirrel.com/tools/webfont-generator */

/* We like off-black for text. */
body, select, input, textarea 
	color #333

a 
	color #168dd9
a:hover 
	text-decoration none

/* Custom text-selection colors (remove any text shadows http//twitter.com/miketaylr/status/12228805301) 
-moz-selection
	background #008148 color #fff text-shadow none
selection 
	background #008148 color #fff text-shadow none */

/*	j.mp/webkit-tap-highlight-color */
a:link 
	-webkit-tap-highlight-color #fcd700 

ins 
	background-color #fcd700 
	color #000 
	text-decoration none
mark 
	background-color #fcd700 
	color #000 
	font-style italic 
	font-weight bold

/* Mozilla dosen't style place holders by default */
input:-moz-placeholder  
	color #a9a9a9 
textarea:-moz-placeholder  
	color #a9a9a9 

/* Custom styles!
-------------------------------------------------------------------------------*/
#wrapper 
	width 100% margin 0 auto

.controls, .intro, section, figure 
	margin 0 auto
	text-align center

.controls select, .controls button 
	display inline

.controls button, .controls button:focus 
	background none 
	border none
	outline none
.controls button img 
	width 50px
	height 50px

.intro 
	max-width 900px

header 
	z-index 100 
	width 100% 
	height 50px
	background-color rgba(237,237,237,0.92)
	position fixed
	clear both
	box-shadow 0 4px 6px -6px grey
	


#logo 
	max-width 240px
	height 50px
	padding 13px 20px
	float left

a:hover #logo 
	background-color rgba(0,130,72,0.2)

.title 
	display inline
	font-size 20px
	float left
	height 50px
	padding 15px 20px
a .title 
	color #333
a:hover .title  
	background-color rgba(0,130,72,0.6)
	text-decoration none
nav 
	ol 
		li 
			display inline
			float right
			height 50px
			padding 13px 15px
	
		a li 
			color #333
	
		a:hover li  
			background-color rgba(0,130,72,0.2)
.share 
	vertical-align middle
img
	&.share 
		margin -4px 5px 0 0
	&.totop 
		position fixed
		left 20px
		bottom 30px
		z-index 1000

#content 
	padding 20px 10px margin 0 auto

footer 
	padding 0 10px
	margin 30px auto 50px
	clear both
	color #7c7c7c
	text-align center
	max-width 800px

.hidden 
	display none

.controls 
	max-width 300px

hr 
	width 100px
	margin 30px auto

.la 
	max-width 800px 
	text-align left

.footnote 
	color gray
	text-align center
	margin 0 auto
	font-size 80%
.todo 
	background-color rgba(255, 255, 0, 0.3)


/* Typography styles!
-------------------------------------------------------------------------------*/

h1 
	font-size 400%
	font-weight bold
	margin-bottom 30px
	margin-top 0px
	line-height 110%
h2 
	font-size 250%
	font-weight bold
	margin-bottom 20px
	margin-top 40px
	line-height 110%
h3 
	font-size 140%
	font-weight bold
	margin-bottom 16px
	margin-top 40px
	line-height 110%
h4 
	font-size 120%
	font-weight bold
	margin-bottom 16px

.lede 

.intro p 
	font-size 140%
	line-height 140%
p.datatext 
	font-size 120%
	line-height 120%


.byline 
	font-style italic
	font-size 120%
.dateline 
	text-transform uppercase
	font-size 95% !important
	margin 50px auto 10px

span.datapoint 
	font-weight bold
	font-size 120%


/* Print styles!
-------------------------------------------------------------------------------*/
// @media print 




/* Media queries!
-------------------------------------------------------------------------------*/

@media screen and (max-width 756px) 
	.bigscreen 
		displaynone
	nav ol li 
		padding 13px 0 13px 5px


@media screen and (max-width 480px) 
	h1 
		font-size 250%
	h2 
		font-size 200%		




#map
	margin0 auto
	width 100%
	max-width 800px

.stroke 
	fill none
	stroke #000
	stroke-width 1px


.fill 
	fill #fff


.graticule 
	fill none
	stroke #777
	stroke-width .5px
	stroke-opacity .5


.country 
	fill #f0f0f0


.boundary 
	fill none
	stroke gray
	stroke-width .5px


.key
	path
		display none
	
	.tick 
		font-size 10px
		
	line 
		stroke #000
		shape-rendering crispEdges


.mapyear 
	fill gray
	text-anchormiddle
	fill-opacity 0.1
	font-size 200px


.d3-tip 
	line-height 1
	padding 6px
	background rgba(0, 0, 0, 0.6)
	color #fff


.d3-tipafter 
	box-sizing border-box
	display inline
	font-size 10px
	width 100%
	line-height 1
	color rgba(0, 0, 0, 0.6)
	content "\25BC"
	position absolute
	text-align center


.d3-tip.nafter 
	margin -1px 0 0 0
	top 100%
	left 0



/* Gender colors
-------------------------------------------------------------------------------*/
.max-m 
	color #35978f
.max-f 
	color #d6604d
.even 
	color #d1e5f0



/* Line charts
-------------------------------------------------------------------------------*/

.linechart 
	width 100%
	max-width 800px
	font-family $qz-sans

.country-line-path 
	fill none
	stroke-width 2


.axis 
	path
		fill none
		stroke none
	line
		fill none
		stroke #eee
		shape-rendering crispEdges
	rect
		fill #f9f9f9
	text
		fill #999


.chart-background 
	opacity 0.5
	max-height 235px !important
	fill #d1e5f0


/* Userinput */

.userinput-0 
	margin-right 10px

/* Mobile styles
-------------------------------------------------------------------------------*/

@media screen and (max-width 480px) 
	.userinput-0 
		margin-right 0px
		margin-bottom 5px
	.mapyear 
		font-size 500%
		fill-opacity 0.3	

