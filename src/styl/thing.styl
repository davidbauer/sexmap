/* Media queries!
-------------------------------------------------------------------------------*/

@media screen and (max-width 756px) 
	.bigscreen 
		displaynone
	nav ol li 
		padding 13px 0 13px 5px	

#map
	margin0 auto
	width 100%
	max-width 800px

.stroke 
	fill none
	stroke #000
	stroke-width 1px


.fill 
	fill #fff


.graticule 
	fill none
	stroke #777
	stroke-width .5px
	stroke-opacity .5


.country 
	fill #f0f0f0


.boundary 
	fill none
	stroke gray
	stroke-width .5px


.key
	path
		display none
	
	.tick 
		font-size 10px
		
	line 
		stroke #000
		shape-rendering crispEdges


.mapyear 
	fill gray
	text-anchor middle
	fill-opacity 0.3


.d3-tip 
	line-height 1
	padding 6px
	background rgba(0, 0, 0, 0.6)
	color #fff


.d3-tipafter 
	box-sizing border-box
	display inline
	font-size 10px
	width 100%
	line-height 1
	color rgba(0, 0, 0, 0.6)
	content "\25BC"
	position absolute
	text-align center


.d3-tip.nafter 
	margin -1px 0 0 0
	top 100%
	left 0



/* Gender colors
-------------------------------------------------------------------------------*/
.max-m 
	color #35978f
.max-f 
	color #d6604d
.even 
	color #d1e5f0



/* Line charts
-------------------------------------------------------------------------------*/

.linechart 
	width 100%
	max-width 800px
	font-family $qz-sans

.country-line-path 
	fill none
	stroke-width 2

.axis 
	path
		fill none
		stroke none
	line
		fill none
		stroke #eee
		shape-rendering crispEdges
	rect
		fill #f9f9f9
	text
		fill #999

.chart-background 
	opacity 0.5
	max-height 235px !important
	fill #d1e5f0

/* Userinput */

.userinput-0 
	margin-right 10px


/* Mobile styles
-------------------------------------------------------------------------------*/

@media screen and (max-width 480px) 
	.userinput-0 
		margin-right 0px
		margin-bottom 5px	

