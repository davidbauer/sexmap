// Interactive-specific css here

.item-body
	margin 0 auto
	max-width 940px

#interactive-content
	width 100%
	max-width 940px
	margin-left auto
	margin-right auto
	

/* Apply a natural box layout model to all elements http//paulirish.com/2012/box-sizing-border-box-ftw/ */
* 
	box-sizing border-box
	
.chromeframe 
	position absolute top 0

/* Ok, this is where the fun starts.
-------------------------------------------------------------------------------*/

p 
	max-width 640px
	margin-right auto
	margin-left auto
	text-align left
	
.intro
	font-family $qz-sans

body, select, input, textarea 
	color #333

a 
	color #168dd9
a:hover 
	text-decoration none

-moz-selection
	background #008148 color #fff text-shadow none
selection 
	background #008148 color #fff text-shadow none

a:link 
	-webkit-tap-highlight-color #fcd700 

ins 
	background-color #fcd700 
	color #000 
	text-decoration none
mark 
	background-color #fcd700 
	color #000 
	font-style italic 
	font-weight bold

/* Mozilla dosen't style place holders by default */
input:-moz-placeholder  
	color #a9a9a9 
textarea:-moz-placeholder  
	color #a9a9a9 

/* Custom styles!
-------------------------------------------------------------------------------*/
#wrapper 
	width 100% margin 0 auto

.controls, section, figure 
	margin 0 auto
	text-align center

.controls select, .controls button 
	display inline

.controls button, .controls button:focus 
	background none 
	border none
	outline none
.controls button img 
	width 50px
	height 50px

.topper
	top 50px
	
	.kicker
		text-transform uppercase
		font-family $qz-sans-bold
		color #006AA4
		font-size .75em
		text-align center
		display block
	
	h1 
		text-align center
		line-height 1.2
		margin-top 0
	
	p
		margin 0 auto
		padding 0
		font-family $qz-sans
		text-align left
		max-width 550px
		
	* + *,
	p + p
		margin 0.5em auto
		
	.item-meta
		*
			color $qz-body-black
			line-height 1.2
		a
			text-decoration none
		a:hover
			text-decoration underline
		a.author-name
			color $qz-body-link-blue
		a.twitter-handle:before
			content "@"
			position relative
			top -.15em
		font-size 0.75em
		font-family $qz-sans
		background 0 0
		margin 01em 0
		text-align center
		border-right 1px solid #e7e7e7
		div
			margin 0
			padding 0
		h5
			margin 0
			padding 0
			font-weight normal
			font-family $qz-sans
			font-size 1em

#content 
	padding 20px 10px margin 0 auto

footer 
	padding 0 10px
	margin 30px auto 50px
	clear both
	color #7c7c7c
	text-align center

.hidden 
	display none

.controls 
	max-width 300px

hr 
	width 100px
	margin 30px auto

.la 
	text-align left

.footnote 
	color gray
	text-align center
	margin 0 auto
	font-size 80%
.todo 
	background-color rgba(255, 255, 0, 0.3)


/* Typography styles!
-------------------------------------------------------------------------------*/


span.datapoint 
	font-weight bold
	font-size 120%


